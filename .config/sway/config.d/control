
set $term foot
set $menu riced-menu-run
set $broswer firefox

# Fast start
bindsym {
  # Start terminal
  $mod+Return exec $term
  # Start broswer
  $mod+Shift+Return exec $broswer
  # Screen shot
  Print exec GRIM_DEFAULT_DIR=\"$(xdg-user-dir PICTURES)/screenshots\" grim
  # Kill focused window
  $mod+Shift+q kill
  # Start your launcher
  $mod+d exec $menu
  # Start with prime-run
  $mod+Shift+d exec prime-run $menu
}

mode "start" {
  bindsym {
    Escape mode "default"
    $mod+q mode "default"
    $mod+Shift+q mode "default"
    # Start proxy
    $mod+p exec proxy-start-gui; mode "default"
  }
}
bindsym $mod+s mode "start"

# Kill
mode "stop" {
  bindsym {
    Escape mode "default"
    $mod+q mode "default"
    $mod+Shift+q mode "default"
    # Kill proxy
    $mod+Shift+p exec proxy-stop-gui; mode "default"
  }
}
bindsym $mod+Shift+s mode "stop"

# Settings
mode "settings" {
  bindsym {
    Escape mode "default"
    $mod+q mode "default"
    $mod+Shift+q mode "default"
    # Set wallpaper
    $mod+p exec \"${XDG_CONFIG_HOME:-$HOME/.config}/sway/scripts/change-wallpaper\"; mode "default"
    # Set wallpaper persistently
    $mod+Shift+p exec \"${XDG_CONFIG_HOME:-$HOME/.config}/sway/scripts/change-wallpaper --persist\"; mode "default"
    # Set wereless connection
    $mod+period exec \"${XDG_CONFIG_HOME:-$HOME/.config}/sway/scripts/wifi-connect\"; mode "default"
  }
}
bindsym $mod+x mode "settings"

# Reload the configuration file
bindsym $mod+Shift+c reload

# Exit sway (logs you out of your Wayland session)
# bindsym $mod+escape exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
bindsym $mod+escape exit

# Notification
# dismiss all notifications
bindsym $mod+n exec makoctl dismiss -a
# restore notification
bindsym $mod+Shift+n exec makoctl restore
# invoke action
bindsym $mod+a exec makoctl invoke
# invoke action selected via riced-menu
bindsym $mod+Shift+a exec makoctl menu -- riced-menu -l 2


#
# Utilities:
#
# Special keys to adjust volume
bindsym --locked XF86AudioLowerVolume exec audioctl set pvolume 5%- && pkill -RTMIN+1 i3blocks
bindsym --locked XF86AudioRaiseVolume exec audioctl set pvolume 5%+ && pkill -RTMIN+1 i3blocks
bindsym --locked XF86AudioMute exec audioctl set pswitch toggle && pkill -RTMIN+1 i3blocks

# Special keys to adjust brightness via brightnessctl
# bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
# bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+

