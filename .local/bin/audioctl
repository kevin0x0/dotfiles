#!/bin/sh

if { pactl info && command -v audioctl.pa; } >/dev/null 2>&1; then
  exec audioctl.pa "$@"
fi

case $(uname) in
  Linux)
    if command -v amixer >/dev/null 2>&1; then
      exec audioctl.alsa "$@"
    fi
    ;;
  FreeBSD)
    if command -v audioctl.oss >/devnull 2>&1; then
      exec audioctl.oss "$@"
    fi
    ;;
esac

printf "No controller found\n" >&2
