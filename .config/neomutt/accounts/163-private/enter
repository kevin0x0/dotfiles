
set spool_file = +INBOX
set postponed = +草稿箱
unset record
set trash = +已删除

#IMAP
set imap_user = "$my_163_private_address"
set imap_pass = "$my_163_private_imap_pass"
set imap_send_id = yes

#SMTP
set real_name = 'kevin'
set from = $my_163_private_address
set smtp_url = "smtps://$my_163_private_address@smtp.163.com:465/"
set smtp_pass = $my_163_private_smtp_pass
set ssl_force_tls = yes
set ssl_starttls = yes
set smtp_authenticators = "plain"

# PGP and SMIME
set pgp_sign_as = $my_163_private_pgp_sign_keyid
set smime_sign_as = $my_163_private_smime_sign_keyid

set pgp_self_encrypt = yes
set smime_self_encrypt = yes
set pgp_default_key = $my_163_private_pgp_self_encrypt_keyid
set smime_default_key = $my_163_private_smime_self_encrypt_keyid

unmailboxes *
mailboxes +INBOX +已发送
mailboxes +垃圾邮件 +广告邮件 +病毒文件夹 +草稿箱
# mailboxes +垃圾邮件 +广告邮件 +病毒文件夹 +草稿箱 +已删除

unsubscribe *
subscribe Gnupg-devel@gnupg.org Gnupg-users@gnupg.org

unalternates *
alternates $my_163_private_address

set my_163_private_source = "$my_none"

set $my_last_source_variable = enter
set my_last_source_variable = my_163_private_source

# vim: ft=neomuttrc
