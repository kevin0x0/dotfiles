vim9script

source $VIMRUNTIME/defaults.vim

set number
set rnu

set signcolumn=number

set nowrap

set expandtab
set tabstop=2
set softtabstop=2

set autoindent
set shiftwidth=2

set showcmd

set splitbelow
set splitright

set nohlsearch
set noignorecase
set incsearch

set scrolloff=0

set cursorline

set jumpoptions+=stack


noremap <silent> <M-h> <C-w>h
noremap <silent> <M-j> <C-w>j
noremap <silent> <M-k> <C-w>k
noremap <silent> <M-l> <C-w>l

noremap <silent> <M-S-h> <C-w>H
noremap <silent> <M-S-j> <C-w>J
noremap <silent> <M-S-k> <C-w>K
noremap <silent> <M-S-l> <C-w>L

inoremap jk <Esc>
inoremap jK <Esc>
inoremap Jk <Esc>
inoremap JK <Esc>

noremap <M-w> :w<CR>
noremap <M-q> :q<CR>

colorscheme default

map <M-e> :e %:h<CR>
map <M-f> :call execute(':e ' .. getcwd())<CR>

const config_dir = expand('<sfile>:p:h') 
execute('source ' .. config_dir .. '/emacscmdline.vim')
execute('source ' .. config_dir .. '/altkeys.vim')
execute('source ' .. config_dir .. '/plug.vim')
execute('source ' .. config_dir .. '/plugins.vim')
