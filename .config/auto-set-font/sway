
set_font() {
  local font="$1" monofont="$2"
  local f="${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/visual"
  local tmpfile="$(mktemp)"
  sed -e 's/^\(set \$font\) .*$/\1 '"$font"'/' \
    -e 's/^\(set \$monofont\) .*$/\1 '"$monofont"'/' -- "$f" \
    >"$tmpfile" && mv -- "$tmpfile" "$f"
}

reload() {
  swaymsg reload
}

