#!/usr/bin/bash

error() {
  echo "$1" >&2
  exit 1
}

HTTP_METHOD=GET
API_BASE=http://localhost:9090
API_METHOD=
HTTP_BODY=
EXTRA_ARGS=()

while [ "$#" -ne 0 ]; do
  case "$1" in
    -X)
      [ "$#" -eq 1 ] && error "Option '$1' needs a value"
      shift
      HTTP_METHOD=$1
      ;;
    --base|-B)
      [ "$#" -eq 1 ] && error "Option '$1' needs a value"
      shift
      API_BASE=$1
      ;;
    -d)
      [ "$#" -eq 1 ] && error "Option '$1' needs a value"
      shift
      HTTP_BODY=$1
      ;;
    --switch|-S)
      [ "$#" -eq 1 ] && error "Option '$1' needs a value"
      shift
      HTTP_METHOD=PUT
      HTTP_BODY="{ \"name\": \"$1\" }"
      ;;
    -*)
      error "Unknown option $1"
      ;;
    *)
      API_METHOD=${1// /%20}
      ;;
  esac
  shift
done


if [ -n "$HTTP_BODY" ]; then
  EXTRA_ARGS=(-H "Content-Type: application/json" -d "$HTTP_BODY")
fi

curl -s -X "$HTTP_METHOD" "${EXTRA_ARGS[@]}" -- "$API_BASE/$API_METHOD"
