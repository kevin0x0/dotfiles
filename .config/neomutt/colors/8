unset color_directcolor

# index
color index             cyan     default
color index_author      green    default
color index_subject     cyan     default

# status
color status            cyan     black

# error
color error             red      default
color message           green    default

# email content
color header            cyan     default    "^From:"
color header            cyan     default    "^Subject:"
color body              cyan     default    "[-a-z_0-9.+]+@[-a-z_0-9]+\\.[a-z]+"
color body              cyan     default    "https?://[^ ]+"
color quoted            green    default
color signature         green    default

# indicator
color indicator         brightyellow default

