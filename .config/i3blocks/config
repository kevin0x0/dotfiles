# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=0

[ethernet]
command="${XDG_CONFIG_HOME:-$HOME/.config}/i3blocks/scripts/ethernet"
interval=20
signal=3

[wireless]
command="${XDG_CONFIG_HOME:-$HOME/.config}/i3blocks/scripts/wireless"
interval=20
signal=3

[battery]
command="${XDG_CONFIG_HOME:-$HOME/.config}/i3blocks/scripts/battery"
interval=10

[volume]
command="${XDG_CONFIG_HOME:-$HOME/.config}/i3blocks/scripts/volume"
interval=once
signal=1

[date]
command=date '+ðŸ“… %Y-%m-%d %A';
color=#ceb992
interval=once
signal=2

[time]
command="${XDG_CONFIG_HOME:-$HOME/.config}/i3blocks/scripts/time"
color=#ceb992
interval=5

# vim: ft=dosini
