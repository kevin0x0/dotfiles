set my_cache_home = `printf "%s" "${XDG_CACHE_HOME:-$HOME/.cache}"`
set my_config_home = `printf "%s" "${XDG_CONFIG_HOME:-$HOME/.config}"`

set mbox_type = Maildir
set header_cache = "$my_cache_home/neomutt/header/"
set message_cache_dir = "$my_cache_home/neomutt/message/"

set use_threads = yes
set sort = date
set sort_aux = date

set editor = "nvim"

set crypt_auto_smime = no
set crypt_auto_pgp = no
set crypt_auto_encrypt = no
set crypt_auto_sign = no
set crypt_reply_sign = yes
set crypt_reply_encrypt = yes
set crypt_reply_sign_encrypted = yes
set crypt_use_gpgme = yes
set crypt_verify_sig = yes

set pgp_use_gpg_agent = yes

source accounts/init
source mailinglists
source keybindings
source "colors/`termcolors`"

set query_command = "$my_config_home/neomutt/scripts/address-query %s"
set new_mail_command = "$my_config_home/neomutt/scripts/new-mail-notify %n %u &"
