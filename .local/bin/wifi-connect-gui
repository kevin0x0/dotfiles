#!/bin/sh

wifi-connect-core riced-menu -l 8

exitcode=$?

summary=Failure
[ "$LANG" = zh_CN.UTF-8 ] && summary="失败"

case "$exitcode" in
  64)
    body="No wireless interface"
    [ "$LANG" = zh_CN.UTF-8 ] && body="未找到无线设备接口"
    notify-send "$summary" "$body" --app-name=wifi-connect --urgency=critical
    exit 64
    ;;
  65)
    body="Unable to create config file"
    [ "$LANG" = zh_CN.UTF-8 ] && body="无法创建配置文件"
    notify-send "$summary" "$body" --app-name=wifi-connect --urgency=critical
    exit 65
    ;;
esac
