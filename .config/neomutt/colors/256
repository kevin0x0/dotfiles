# basic colors ---------------------------------------------------------
color error               color197  color0                        # message line error text
color tilde               color81   color0                        # vi-like tildes marking blank lines
color message             color81   color0
color markers       bold  color197  color0                        # wrapped-line /^\+/ markers
color attachment    bold  color209  color235                        # attachment headers
color search              color235  color209                      # search patterns in pager
color status        bold  color30   color235
color indicator     bold  color235  color209                       # selected email in index
color tree          bold  color209   color0                        # arrow in threads (`-->')

# basic monochrome screen
mono bold           bold
mono underline      underline
mono indicator      reverse
mono error          bold
mono header         bold                            "^(From|Subject|Date|To|Cc|Bcc):"
mono quoted         bold

# index ----------------------------------------------------------------

color index               color209  color0        "~A"            # all messages
color index               color244  color0        "~E"            # expired messages
color index         bold  color209  color0        "~N"            # new messages
color index               color244  color0        "~O"            # old messages
color index               color244  color0        "~R"            # read messages
color index         bold  color244  color0        "~Q"            # messages that have been replied to
color index         bold  color209  color0        "~U"            # unread messages
color index         bold  color209  color0        "~U~$"          # unread, unreferenced messages
color index               color81   color0        "~v"            # messages part of a collapsed thread
color index               color244  color0        "~P"            # messages from me
#color index               color71   color0        "~p!~F"        # messages to me
#color index               color71   color0        "~N~p!~F"      # new messages to me
#color index               color71   color0        "~U~p!~F"      # unread messages to me
#color index               color244  color0        "~R~p!~F"      # messages to me
color index         bold  color13   color0        "~F"            # flagged messages
color index         bold  color13   color0        "~F~p"          # flagged messages to me
color index         bold  color13   color0        "~N~F"          # new flagged messages
color index         bold  color13   color0        "~N~F~p"        # new flagged messages to me
color index         bold  color13   color0        "~U~F~p"        # new flagged messages to me
color index               color235  color197        "!~N ~D"        # deleted messages
color index               color235  color197        "~N ~D"         # deleted new messages
color index               color244  color0        "~v~(!~N)"      # collapsed thread with no unread
color index               color81   color0        "~v~(~N)"       # collapsed thread with some unread
color index               color81   color0        "~N~v~(~N)"     # collapsed thread with unread parent
# statusbg used to indicated flagged when foreground color shows other status
# for collapsed thread
color index               color81   color0        "~v~(~F)!~N"    # collapsed thread with flagged, no unread
color index               color81   color0        "~v~(~F~N)"     # collapsed thread with some unread & flagged
color index               color81   color0        "~N~v~(~F~N)"   # collapsed thread with unread parent & flagged
color index               color81   color0        "~N~v~(~F)"     # collapsed thread with unread parent, no unread inside, but some flagged
color index               color81   color0        "~v~(~p)"       # collapsed thread with unread parent, no unread inside, some to me directly
color index               color81   color160        "~v~(~D)"       # thread with deleted (doesn't differentiate between all or partial)
color index               color23   color0        "~T"            # tagged messages
color index         bold  color23   color0        "~T~F"          # tagged, flagged messages
color index         bold  color23   color0        "~T~N"          # tagged, new messages
color index         bold  color23   color0        "~T~U"          # tagged, unread messages

# message headers ------------------------------------------------------

color hdrdefault    bold  color95   color0
color header        bold  color81   color0        "^(From|To|Cc|Bcc)"
color header        bold  color30   color0        "^(Subject|Date)"

